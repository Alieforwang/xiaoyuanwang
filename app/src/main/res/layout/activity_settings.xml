<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器地址"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_server_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://10.0.100.100"
            android:inputType="textUri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="User-Agent (请求头)"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_user_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User-Agent"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <Switch
            android:id="@+id/switch_auto_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="启动时自动登录" />

        <Switch
            android:id="@+id/switch_remember_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="记住账号密码" />

        <Switch
            android:id="@+id/switch_run_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="后台运行 (关闭后退出即注销)" />

        <Switch
            android:id="@+id/switch_auto_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="退出时自动下线" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="保存配置" />

    </LinearLayout>
</ScrollView>
